<div class="container signup-login">

  <h2 class="signup-login-heading">Create a roborent account</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, placeholder: "Email address", class: 'signup-login-text', autofocus: true %>
  </div>

  <div class="field">
    <!-- <%= f.label :first_name %><br/> -->
    <%= f.text_field :first_name, placeholder: "First name", class: 'signup-login-text'%>
  </div>

  <div class="field">
    <!-- <%= f.label :last_name %><br/> -->
    <%= f.text_field :last_name, placeholder: "Last name", class: 'signup-login-text'%>
  </div>


  <div class="field">
    <!-- <%= f.label :password %> -->
    <!-- <% if @minimum_password_length %> -->
    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
    <!-- <% end %><br /> -->
    <%= f.password_field :password, placeholder: "Create a password (6 characters minimum)", autocomplete: "off", class: 'signup-login-text' %>
  </div>

  <div class="field">
    <!-- <%= f.label :password_confirmation %><br /> -->
    <%= f.password_field :password_confirmation, placeholder: "Confirm password", autocomplete: "off", class: 'signup-login-text' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-signup-login' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
